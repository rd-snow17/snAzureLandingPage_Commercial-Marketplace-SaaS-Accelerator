<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing Page</title>
    <link rel="stylesheet" href="~/css/customer-site.css" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="~/lib/Datatable/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/Datatable/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/Datatable/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/customer-custom.css" />
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
    <link href="~/lib/bootstrap/4.4.1/css/customer-offcanvas.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark cm-top-nav-bar nav-border">
        <a class="navbar-brand mr-auto mr-lg-0" href="@Url.Action("Index", "Home")">
            <img class="cm-logo pull-left" src="~/servicenow.png" />
            @*<img class="cm-logo pull-left" src="https://kblnuser.azurewebsites.net/logo.png" />*@
        </a>
        @*<a class="navbar-brand mr-auto mr-lg-0" asp-area="" asp-controller="Home" asp-action="Index">SaasKit Demo</a>*@

        <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
            <div class="navbar-nav mr-auto">

            </div>

            <div class="form-inline my-2 my-lg-0">
                @if (this.User.Identity.IsAuthenticated)
                {
                    <span class="cm-username text-black">@User.Identity.Name&nbsp;</span>
                    <a class="text-black cm-logout" asp-controller="Account" asp-action="SignOut">&nbsp;<i class="fa fa-sign-out fa-2x"></i></a>
                }
                else
                {
                    <a class="text-black" asp-controller="Account" asp-action="SignIn">Sign in</a>
                }
            </div>
        </div>
    </nav>
    <div class="nav-scroller bg-white shadow-sm cm-menu-bar menu-height">
        <nav class="container pb-3 nav nav-underline top-mg">
            <!-- <a class="nav-link active"> -->
            @if (this.User.Identity.IsAuthenticated)
            {
                <a class="nav-link text-nav" asp-area="" asp-controller="Home" asp-action="Index" id="home">Home</a>
                <a class="nav-link text-nav" asp-area="" asp-controller="Home" asp-action="Subscriptions" id="subscription">Subscriptions</a>
                @if (TempData["ShowWelcomeScreen"] != null && Convert.ToString(TempData["ShowWelcomeScreen"]) == "True")
                {
                    /* <a class="nav-link text-nav" asp-area="" asp-controller="Home" asp-action="Subscriptions">Subscriptions</a> */
                }
            }
            <!--   </a> -->
        </nav>
    </div>
    <div class="container pb-3">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="container pb-3 help-mg">
        <main>
            <div class="p-3 card help-card">Users should reach out to their account executive if help is needed.</div>
        </main>

    </div>
    <div class="scroll-page"></div>
    <footer class="cm-footer">
        <div class="container text-right text-footer">
            &copy; 2023 ServiceNow. All rights reserved.
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/4.4.1/js/offcanvas.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
